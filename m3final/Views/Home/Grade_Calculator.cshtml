@{

}

@model Grade_Calculator;

<h2>
    Grade Calculator
</h2>
<form method="post">
    <h3>Category</h3>
    <label>Assignments (55%): </label>
    <input id="hwGrade" asp-for="homework" /><br />
    <label>Group Project (5%): </label>
    <input id="gpGrade" asp-for="group_project" /><br />
    <label>Quizzes (10%): </label>
    <input id="qGrade" asp-for="quiz" /><br />
    <label>Exams (20%): </label>
    <input id="testGrade" asp-for="test" /><br />
    <label>INTEX (10%): </label>
    <input id="intexGrade" asp-for="intex" /><br />
    <br />

    <input id="btnSend" type="submit" value="Send Grade" />
    <div asp-validation-summary="All"></div>

    <br /><br /><br /><br /><br />
</form>
<script src="js/icon.js"></script>

